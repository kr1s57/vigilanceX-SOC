# ============================================
# VIGILANCE X - Configuration
# ============================================
# Copiez ce fichier en .env et modifiez les valeurs

# ============================================
# Docker Image Version (for docker-compose.prod.yml)
# ============================================
# Use "latest" or specific version like "3.55.110"
VGX_VERSION=latest

# ============================================
# Application
# ============================================
APP_ENV=production
# APP_ENV=development

# ============================================
# ClickHouse
# ============================================
CLICKHOUSE_USER=vigilance
CLICKHOUSE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# Sophos XGS Firewall
# ============================================
SOPHOS_HOST=192.168.1.1
SOPHOS_PORT=4444
SOPHOS_USER=admin
SOPHOS_PASSWORD=CHANGE_ME_SOPHOS_PASSWORD

# ============================================
# Threat Intelligence APIs
# ============================================
# === Core Providers (3 piliers) ===

# AbuseIPDB - https://www.abuseipdb.com/account/api
ABUSEIPDB_API_KEY=

# VirusTotal - https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# AlienVault OTX - https://otx.alienvault.com/api
ALIENVAULT_API_KEY=

# === Extended Providers ===

# GreyNoise Community - https://www.greynoise.io/viz/signup
GREYNOISE_API_KEY=

# Criminal IP - https://www.criminalip.io/
CRIMINALIP_API_KEY=

# Pulsedive - https://pulsedive.com/api/
PULSEDIVE_API_KEY=

# CrowdSec CTI - https://app.crowdsec.net/settings/api-keys
CROWDSEC_API_KEY=

# abuse.ch (ThreatFox + URLhaus) - https://auth.abuse.ch/
ABUSECH_API_KEY=

# IPSum - No API key required (public GitHub data)

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# ============================================
# Licensing System
# ============================================
# License server URL
LICENSE_SERVER_URL=https://vigilancekey.cloudcomputing.lu

# License key (optional - can be entered via UI)
# LICENSE_KEY=XXXX-XXXX-XXXX-XXXX

# Enable/disable licensing (default: true)
LICENSE_ENABLED=true

# Heartbeat interval (default: 12h)
LICENSE_HEARTBEAT_INTERVAL=12h

# Grace period when license server unreachable (default: 168h = 7 days)
LICENSE_GRACE_PERIOD=168h

# Skip TLS verification for self-signed certificates (default: false)
# Set to "true" if your license server uses self-signed SSL
LICENSE_INSECURE_SKIP_VERIFY=false

# ============================================
# SMTP Email Notifications (optional)
# ============================================
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_SECURITY=starttls
# SMTP_FROM_EMAIL=alerts@example.com
# SMTP_USERNAME=alerts@example.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_RECIPIENTS=admin@example.com,security@example.com
